#!/usr/bin/env bash
# usage: bin/finalize <build-path> <cache-path> <deps-path> <index>

BUILD_PATH=${1:-}
CACHE_PATH=${2:-}
DEPS_PATH=${3:-}
INDEX=${4:-}

# Bash Error Handling
set -eu

# Set our environment to our envsrc
source $CACHE_PATH/envsrc.sh

# Build application with Cargo
echo "-----> Building application using Cargo"
cd $BUILD_PATH
rm -rf $CARGO_TARGET_DIR
echo $BUILD_PATH
echo $CACHE_PATH
cargo build --release
ls -la
echo `pwd`
ls target/*/ -1 | grep -vE "/target|^$"
ls target/debug
cp target/release/music_store $BUILD_PATH
